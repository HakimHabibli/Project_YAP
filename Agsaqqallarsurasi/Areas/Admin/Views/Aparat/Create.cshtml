@model CreateAparatVM
@{
    ViewData["Title"] = "Create";
}


<h1>Create</h1>
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Title">
                    <span class="text text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span class="text text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateTime"></label>
                    <input asp-for="DateTime" class="form-control" placeholder="DateTime">
                    <span class="text text-danger" asp-validation-for="DateTime"></span>
                </div>
                  <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" placeholder="FullName">
                    <span class="text text-danger" asp-validation-for="FullName"></span>
                </div>
                    <div class="form-group">
                    <label asp-for="Photo"></label>
                    <input asp-for="Photo" class="form-control bg-dark" placeholder="Photo">
                    <span class="text text-danger" asp-validation-for="Photo"></span>
                </div>



                <button type="submit" class="btn btn-primary me-2 text-light">Create</button>
                <button class="btn btn-light" asp-action="Index">Go back</button>

            </form>
        </div>
        </div>
        </div>
   