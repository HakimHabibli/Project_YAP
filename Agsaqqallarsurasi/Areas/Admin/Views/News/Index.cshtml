@model List<News>
@{
    ViewData["Title"] = "Index";
    int count=1;
}

<div class="d-flex justify-content-end mb-2">
    <a class="btn btn-success text-light" asp-area="Admin" asp-controller="News" asp-action="Create">Create Member</a>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Date
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                               Description
                            </th>
                            <th>
                              Image
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (News item in Model)
                        {
                                <tr>
                                    <td> @count</td>
                                    <td>
                                    @item.DateTime
                                     </td>
                                    <td>
                                    @item.Title
                                    </td>
                                    <td>
                                    @item.Description
                                    </td>
                                    <td>
                                        <img src="~/assets/img/@item.NewsImages.FirstOrDefault(s=>s.IsActive=default).Path" style="height:150px; width:150px;"></img>
                                    </td>
                                    <td>
                                        <a class="btn btn-warning text-light" asp-area="Admin" asp-controller="News" asp-action="Update" asp-route-Id="@item.Id">
                                            <i class="mdi mdi-grease-pencil"></i>
                                        </a>
                                            <a class="btn btn-danger text-light" asp-area="Admin" asp-controller="News" asp-action="Delete" asp-route-Id="@item.Id">
                                            <i class="mdi mdi-delete-forever"></i>
                                        </a>
                                    </td>
                                </tr>
                            count++;
                        }

                        @*<td>
                        <div class="progress">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        </td>
                        <td>
                        $ 77.99
                        </td>
                        <td>
                        May 15, 2015
                        </td>*@

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>