
@model UpdateRayonHeyetVM
{
    ViewData["Title"] = "Update";
}


<h1>Update</h1>
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly"></div>

            <form class="forms-sample" method="post" enctype="multipart/form-data">


                    <input type="hidden" asp-for="Id" class="form-control" placeholder="Id">

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span class="text text-danger" asp-validation-for="Description"></span>
                </div>

                  <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" placeholder="FullName">
                    <span class="text text-danger" asp-validation-for="FullName"></span>
                </div>

                <button type="submit" class="btn btn-primary me-2 text-light">Update</button>
                <button class="btn btn-light" asp-action="Index">Go back</button>

            </form>
        </div>
        </div>
        </div>
