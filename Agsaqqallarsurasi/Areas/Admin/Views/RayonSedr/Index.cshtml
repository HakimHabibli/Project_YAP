@model List<RayonSedr>
@{
	ViewData["Title"] = "Index";
	int count = 1;
}

<div class="d-flex justify-content-end mb-2">
	<a class="btn btn-success text-light" asp-area="Admin" asp-controller="RayonSedr" asp-action="Create">Create Member</a>
</div>
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>

							<th>
								Title
							</th>
							<th>
							   Description
							</th>
							<th>
							  Image
							</th>

						</tr>
					</thead>
					<tbody>
						@foreach (RayonSedr rayonSedr in Model)
						{
									   <tr>
										   <td>@count</td>
										   <td>@rayonSedr.FullName</td>
										   <td>@rayonSedr.Title</td>
										   <td>
											   <a class="btn btn-warning text-light" asp-area="Admin" asp-controller="RayonSedr" asp-action="Update" asp-route-Id="@rayonSedr.Id">
											   <i class="mdi mdi-grease-pencil"></i> 
											   </a>
											   <a class="btn btn-danger text-light" asp-area="Admin" asp-controller="RayonSedr" asp-action="Delete" asp-route-Id="@rayonSedr.Id">
											   <i class="mdi mdi-delete-forever"></i>
										       </a>
									   </td> 
									   </tr>
							count++;
						}


					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
